<p id="notice"><%= notice %></p>

<h1>Listing Builders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builders.each do |builder| %>
      <tr>
        <td><%= builder.name %></td>
        <td><%= builder.email %></td>
        <td><%= builder.phone %></td>
        <td><%= builder.bio %></td>
        <td><%= builder.location %></td>
        <td><%= builder.minprice %></td>
        <td><%= builder.maxprice %></td>
        <td><%= builder.ship %></td>
        <td><%= builder.rodtype %></td>
        <td><%= builder.species %></td>
        <td><%= builder.poleblank %></td>
        <td><%= link_to 'Show', builder %></td>
        <td><%= link_to 'Edit', edit_builder_path(builder) %></td>
        <td><%= link_to 'Destroy', builder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

